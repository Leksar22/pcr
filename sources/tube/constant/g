FoamFile
{
    version     2.0;
    format      ascii;
    class       uniformDimensionedVectorField;
    object      g;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -2 0 0 0 0];

g  9.81;
alpha 45.0;
gX  #calc"$g * sin($alpha * 3.1415/180.0)";
gZ  #calc"-1.0 * $g * cos($alpha * 3.1415/180.0)";

value           ($gX 0 $gZ);


// ************************************************************************* //
